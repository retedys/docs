{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "DocsOrb",
  "description": "Policy management for HR, LegalOps, and compliance teams",
  "colors": {
    "primary": "#009E65",
    "light": "#00C37C",
    "dark": "#009E65"
  },
  "favicon": "/help-favicon.png",
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "links": [],
    "primary": {
      "type": "button",
      "label": "Go to DocsOrb",
      "href": "https://app.docsorb.com"
    }
  },
  "navigation": {
    "tabs": [
      {
        "tab": "Guides",
        "groups": [
          {
            "group": "Getting started",
            "pages": ["index", "quickstart"]
          },
          {
            "group": "Create",
            "pages": [
              "create/policies",
              "create/boards",
              "create/templates",
              "create/documents"
            ]
          },
          {
            "group": "Train",
            "pages": [
              "train/dashboard",
              "train/acknowledgments"
            ]
          },
          {
            "group": "Track",
            "pages": [
              "track/analytics",
              "track/audit-trail",
              "track/reminders"
            ]
          },
          {
            "group": "Team",
            "pages": [
              "team/users",
              "team/roles",
              "team/groups"
            ]
          },
          {
            "group": "Integrations",
            "pages": [
              "integrations/storage",
              "integrations/billing"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": []
    }
  },
  "contextual": {
    "options": ["copy", "view"]
  },
  "fonts": {
    "family": "DM Sans",
    "weight": 400
  }
}
